<%- model_class = Tucdoc -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:coagyear) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:object_class_id) %></th>
      <th><%= model_class.human_attribute_name(:item_no) %></th>
      <th><%= model_class.human_attribute_name(:amend_no) %></th>
      <th><%= model_class.human_attribute_name(:doc) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tucdocs.each do |tucdoc| %>
      <tr>
        <td><%= link_to tucdoc.id, tucdoc_path(tucdoc) %></td>
        <td><%= tucdoc.coagyear %></td>
        <td><%= tucdoc.project_id %></td>
        <td><%= tucdoc.object_class_id %></td>
        <td><%= tucdoc.item_no %></td>
        <td><%= tucdoc.amend_no %></td>
        <td><%= tucdoc.doc %></td>
        <td><%=l tucdoc.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      tucdoc_path(tucdoc), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tucdoc_path(tucdoc), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tucdoc_path(tucdoc),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tucdoc_path,
            :class => 'btn btn-primary' %>
<%= link_to "Home", root_path,
            :class => 'btn btn-success' %>


